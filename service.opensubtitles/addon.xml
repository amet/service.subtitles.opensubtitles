<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.opensubtitles"
       name="OpenSubtitles"
       version="1.0.0"
       provider-name="amet">
  <requires>
    <import addon="xbmc.python" version="2.1"/>
    <import addon="script.subtitles.main" version="4.0.0"/>
  </requires>
  <extension point="xbmc.python.subtitles"
             library="service.py" />
  <extension point="xbmc.python.module"
             library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">OpenSubtitles</summary>
    <description lang="en">Search and download subtitles from OpenSubtitles</description>
  </extension>
</addon>
